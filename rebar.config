%% -*- erlang -*-
{erl_opts, [debug_info
           %% this option disables tail call optimization for debug
           %,{parse_transform, disable_tco}
           ]}.
{cover_enabled, true}.
{erl_first_files, ["src/do.erl", "src/cut.erl", "src/another_cut.erl", 
                   "src/import_as.erl", "src/overload_op.erl", "src/monad_m.erl",
                   "src/monad_plus.erl", "src/typeclass.erl",
                   "src/monad_trans.erl", "src/monad_runner.erl",
                   "src/monad_state.erl", "src/monad_reader.erl", 
                   "src/monad_cont.erl", "src/monad_fail.erl",
                   "src/functor.erl", "src/applicative.erl", "src/alternative.erl",
                   "src/monad.erl", "src/traversable.erl",
                   "src/state_t.erl", "src/reader_t.erl", 
                   "src/cont_t.erl", "src/error_t.erl", "src/writer_t.erl"
                  ]}.
{deps, [
        {'ast_traverse', ".*", {git, "https://github.com/slepher/ast_traverse.git", "master"}},
        {'disable_tco', ".*", {git, "https://github.com/slepher/disable_tco.git", "master"}}
       ]}.

{dialyzer,
 [
  %% Store PLT locally inside the project in .rebar (Default)
  {plt_location, local},
  {warnings, [
              unmatched_returns,
              race_conditions, unknown
             ]}
 ]}.
