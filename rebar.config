%% -*- erlang -*-
{erl_opts, [debug_info]}.
{cover_enabled, true}.
{provider_hooks, [{post, [{compile, {erlando, compile}}]}]}.

{erl_first_files, ["src/do.erl", "src/cut.erl", "src/another_cut.erl", 
                   "src/import_as.erl", "src/userdef_operator.erl", 
                   "src/function_generator.erl",           
                   "src/type.erl", "src/monad_plus.erl", "src/typeclass.erl",
                   "src/monad_trans.erl", "src/monad_runner.erl",
                   "src/monad_state.erl", "src/monad_reader.erl", "src/monad_writer.erl",
                   "src/monad_cont.erl", "src/monad_fail.erl",
                   "src/functor.erl", "src/applicative.erl", "src/alternative.erl",
                   "src/monad.erl", "src/traversable.erl", "src/foldable.erl"
                  ]}.
{deps, [
        {'ast_traverse', {git, "https://github.com/slepher/ast_traverse.git", {branch, "master"}}},
        {'astranaut',    {git, "https://github.com/slepher/astranaut.git", {branch, "v0.1.1"}}}
       ]}.

{plugins, [
  {rebar3_erlando, {git, "https://github.com/slepher/rebar3_erlando.git", {branch, "master"}}}
]}.

{dialyzer,
 [
  %% Store PLT locally inside the project in .rebar (Default)
  {plt_location, local},
  {warnings, [
              unmatched_returns,
              race_conditions, unknown
             ]}
 ]}.

{profiles, [
  {test, [
          {deps, [{'disable_tco', {git, "https://github.com/slepher/disable_tco.git", {branch, "master"}}}]},
          {erl_opts, [{parse_transform, disable_tco}, nowarn_export_all]}
  ]}
]}.
